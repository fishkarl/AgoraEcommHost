                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/strength"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/strength"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:max="10"
                    android:progress="5" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/skin_protect"
                    android:textColor="#FFFFFF" />

                <SeekBar
                    android:id="@+id/skinProtect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:max="10"
                    android:progress="5" />

            </LinearLayout>

            <Switch
                android:id="@+id/switch_video_noise_reduce2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:checked="false"
                android:text="@string/video_denoise"
                android:textColor="#FFFFFF" />

            <Switch
                android:id="@+id/switch_virtual_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:checked="false"
                android:text="@string/virtual_background"
                android:textColor="#FFFFFF" />

            <RadioGroup
                android:id="@+id/virtual_bg_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:checkedButton="@id/virtual_bg_image"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/virtual_bg_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/virtual_background_image"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/virtual_bg_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/virtual_background_color"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/virtual_bg_blur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/virtual_background_blur"
                    android:textColor="#FFFFFF" />

                <RadioButton
                    android:id="@+id/virtual_bg_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/virtual_background_video"
                    android:textColor="#FFFFFF" />

            </RadioGroup>

        </LinearLayout>
    </ScrollView>

    <!-- Top-right control panel toggle button (Material Design style) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_show_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_visibility"
        app:backgroundTint="@color/primary"
        app:tint="@color/on_primary"
        app:elevation="8dp"
        app:fabSize="mini" />

    <!-- Right side control button container (Material Design style) -->
    <LinearLayout
        android:id="@+id/right_control_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Select filter file button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_select_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_filter"
            app:backgroundTint="@color/overlay_medium"
            app:tint="@color/white"
            app:elevation="4dp"
            app:fabSize="mini" />

        <!-- Local cube file button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_local_cube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_cube"
            app:backgroundTint="@color/overlay_medium"
            app:tint="@color/white"
            app:elevation="4dp"
            app:fabSize="mini" />

        <!-- Switch camera button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_switch_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_camera_switch"
            app:backgroundTint="@color/overlay_medium"
            app:tint="@color/white"
            app:elevation="4dp"
            app:fabSize="mini" />

        <!-- Zoom control button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_zoom_control"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_zoom"
            app:backgroundTint="@color/overlay_medium"
            app:tint="@color/white"
            app:elevation="4dp"
            app:fabSize="mini" />

        <!-- Manual focus button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_manual_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_focus"
            app:backgroundTint="@color/overlay_medium"
            app:tint="@color/white"
            app:elevation="4dp"
            app:fabSize="mini" />

    </LinearLayout>

    <!-- Bottom join channel control (Material Design style) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ll_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/overlay_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/channel_id"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_channel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="@string/chanel_support_char"
                    android:inputType="text"
                    android:textColor="@color/on_surface" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/join"
                app:backgroundTint="@color/primary"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
