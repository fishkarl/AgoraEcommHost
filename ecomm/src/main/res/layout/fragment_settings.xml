<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="视频处理设置"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:textColor="@color/on_background" />

        <!-- 面部塑形美化 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="面部塑形美化"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/on_surface" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_face_shape_beautify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="启用面部塑形"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="塑形强度"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_shape_beautify_area_intensity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:value="50"
                    app:labelBehavior="floating" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="风格强度"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_shape_beautify_style_intensity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:value="50"
                    app:labelBehavior="floating" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 面部妆容 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="面部妆容"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/on_surface" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_face_makeup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="启用面部妆容"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                <!-- 眉毛强度 -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="眉毛强度"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_brow_strength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="5"
                    app:labelBehavior="floating" />

                <!-- 睫毛强度 -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="睫毛强度"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_lash_strength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="5"
                    app:labelBehavior="floating" />

                <!-- 阴影强度 -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="阴影强度"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_shadow_strength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="5"
                    app:labelBehavior="floating" />

                <!-- 瞳孔强度 -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="瞳孔强度"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_pupil_strength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="5"
                    app:labelBehavior="floating" />

                <!-- 腮红强度 -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="腮红强度"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_blush_strength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="5"
                    app:labelBehavior="floating" />

                <!-- 唇妆强度 -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="唇妆强度"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_lip_strength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="5"
                    app:labelBehavior="floating" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 面部美化 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="面部美化"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/on_surface" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_face_beautify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="启用面部美化"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                <!-- 美白 -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="美白"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_lightening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="5"
                    app:labelBehavior="floating" />

                <!-- 红润 -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="红润"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_redness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="5"
                    app:labelBehavior="floating" />

                <!-- 锐化 -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="锐化"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_sharpness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="5"
                    app:labelBehavior="floating" />

                <!-- 平滑 -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="平滑"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_smoothness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="5"
                    app:labelBehavior="floating" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 视频增强 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="视频增强"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/on_surface" />

                <!-- 视频增强强度 -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="增强强度"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_video_enhance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="5"
                    app:labelBehavior="floating" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_lightness_enhance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="亮度增强"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_color_enhance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="色彩增强"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                <!-- 色彩强度 -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="色彩强度"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_color_strength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="5"
                    app:labelBehavior="floating" />

                <!-- 皮肤保护 -->
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="皮肤保护"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_skin_protect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:valueFrom="0"
                    android:valueTo="10"
                    android:value="5"
                    app:labelBehavior="floating" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_noise_reduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="降噪"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 虚拟背景 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="虚拟背景"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/on_surface" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_virtual_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="启用虚拟背景"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="背景类型"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface_variant" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_virtual_bg_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_bg_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="图片"
                        app:chipBackgroundColor="@color/chip_background_color" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_bg_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="纯色"
                        app:chipBackgroundColor="@color/chip_background_color" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_bg_blur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="模糊"
                        app:chipBackgroundColor="@color/chip_background_color" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_bg_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="视频"
                        app:chipBackgroundColor="@color/chip_background_color" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView> 